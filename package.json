{
  "name": "semantic-release-pinst",
  "version": "0.0.0-development",
  "description": "semantic-release plugin that disables postinstall scripts using pinst",
  "keywords": [
    "semantic-release",
    "pinst"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/semantic-release-pinst",
  "bugs": "https://github.com/softwareventures/semantic-release-pinst/issues",
  "repository": "github:softwareventures/semantic-release-pinst",
  "license": "ISC",
  "scripts": {
    "commit": "cz",
    "fix": "tsc --noEmit && eslint . --fix && prettier --write .",
    "postinstall": "husky",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "prepack": "tsc",
    "test": "ava"
  },
  "engines": {
    "node": "^18 || ^20 || ^21 || >=22"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "pinst": ">= 2.1.6",
    "semantic-release": ">= 22.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@commitlint/cz-commitlint": "19.2.0",
    "@softwareventures/eslint-config": "7.6.0",
    "@softwareventures/precise-commits": "4.0.15",
    "@softwareventures/prettier-config": "4.0.0",
    "@softwareventures/semantic-release-config": "5.0.0",
    "@softwareventures/tsconfig": "8.0.0",
    "@types/node": "20.14.7",
    "@typescript-eslint/eslint-plugin": "7.13.1",
    "@typescript-eslint/parser": "7.13.1",
    "ava": "6.1.3",
    "commitizen": "4.3.0",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "48.2.12",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-sonarjs": "1.0.3",
    "husky": "9.0.11",
    "inquirer": "9.2.23",
    "pinst": "3.0.0",
    "prettier": "3.3.2",
    "semantic-release": "23.1.1",
    "semantic-release-pinst": "1.0.4",
    "ts-node": "10.9.2",
    "typescript": "5.5.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/cz-commitlint"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/files"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "packageManager": "yarn@4.3.0",
  "publishConfig": {
    "access": "public"
  }
}
